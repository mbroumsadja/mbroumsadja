<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tous les articles - MBROUMSADJA</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-container">
                <h1><a href="/">MBROUMSADJA</a></h1>
                <ul>
                    <li><a href="/">Accueil</a></li>
                    <% if (user) { %>
                        <li><a href="/profil"><%= user.prenom %> <%= user.nom %></a></li>
                    <% } else { %>
                        <li><a href="/inscription">Inscription</a></li>
                        <li><a href="/connexion">Connexion</a></li>
                    <% } %>
                    <li><a href="/admin">Admin</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <h2>Tous les articles</h2>
            <a href="/admin/article/new" class="btn btn-primary">Créer un nouvel article</a>

            <div class="articles-list">
                <% if (articles && articles.length > 0) { %>
                    <% articles.forEach(article => { %>
                        <div class="article-item">
                            <h3><a href="/article/<%= article.id %>"><%= article.titre %></a></h3>
                            <p>Par <%= article.auteur %> • <%= new Date(article.createdAt).toLocaleDateString('fr-FR') %></p>
                            <div class="article-actions">
                                <a href="/admin/article/edit/<%= article.id %>" class="btn btn-secondary">Modifier</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>Aucun article trouvé.</p>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 MBROUMSADJA. Tous droits réservés.</p>
        </div>
    </footer>
</body>
</html>