<body>
    <header>
      <div class="user">
        <button type="button" class="Utilisateur"></button>
        <% if (session) {%>
            <h4><%= session %></h4>
         <%} else { %>
             <span>vous n'etes pas connecter</span>
         <% } %>
      </div>
            <button type="button" class="feetback"><a href="/signin">login</a></button>
    </header>
    <section class="search">
        <!-- <button type="button" class="searchIcon"></button> -->
        <input type="text" name="" id=""  placeholder=" Rechercher ici ...">
        <button type="button" class="searchbtn">search</button>
    </section>
    <section class="navBar"> 
        <li><a href="/">forum</a></li>
