        <li><a href="/">Node</a></li>
        <li><a href="/">Python</a></li>
        <li><a href="/">SQL</a></li>
    </section>
    <main>
         
        <div class="container">
            <% if (!Articles) {%>
                <div class="news-container">
                    <% Articles.forEach(Articles => { %>
                        <div class="Articles-card">
                            <img src="<%= Articles.urlToImage %>" alt="<%= Articles.title %>" class="Articles-image">
                            <div class="Articles-content">
                                <div class="source-date">
                                    <span><%= Articles.source.name %></span>
                                    <span><%= new Date(Articles.publishedAt).toLocaleDateString() %></span>
                                </div>
                                <h2 class="title"><%= Articles.title %></h2>
                                <p class="description"><%= Articles.description %></p>
                                <p class="author">By <%= Articles.author %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
             <%} else { %>
                <h1>
                    BIENVENUE DANS MON BLOG
                 </h1>
             <% } %>
        </div>
    </main>

