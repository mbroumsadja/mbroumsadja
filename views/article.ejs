<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= article ? article.titre : 'Article' %> - MBROUMSADJA</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-container">
                <h1><a href="/">MBROUMSADJA</a></h1>
                <ul>
                    <li><a href="/">Accueil</a></li>
                    <% if (user) { %>
                        <li><a href="/profil"><%= user.prenom %> <%= user.nom %></a></li>
                    <% } else { %>
                        <li><a href="/inscription">Inscription</a></li>
                        <li><a href="/connexion">Connexion</a></li>
                    <% } %>
                    <li><a href="/admin">Admin</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <% if (article) { %>
                <article class="full-article">
                    <% if (article.lien_image) { %>
                        <img src="<%= article.lien_image %>" alt="<%= article.titre %>" class="article-hero-image">
                    <% } %>

                    <h1><%= article.titre %></h1>

                    <div class="article-meta">
                        <span>Par <%= article.auteur %></span>
                        <span>•</span>
                        <span><%= article.categorie %></span>
                        <span>•</span>
                        <span><%= new Date(article.createdAt).toLocaleDateString('fr-FR') %></span>
                        <% if (article.reference) { %>
                            <span>•</span>
                            <span>Référence: <%= article.reference %></span>
                        <% } %>
                    </div>

                    <div class="article-content">
                        <%= article.corps%>
                    </div>
                </article>

                <!-- Section commentaires -->
                <section class="comments-section">
                    <h3>Commentaires</h3>

                    <% if (typeof commentaires !== 'undefined' && commentaires.length > 0) { %>
                        <div class="comments-list">
                            <% commentaires.forEach(comment => { %>
                                <div class="comment">
                                    <div class="comment-header">
                                        <strong><%= comment.auteur %></strong>
                                        <span><%= new Date(comment.createdAt).toLocaleDateString('fr-FR') %></span>
                                    </div>
                                    <p><%= comment.commentaire %></p>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p>Aucun commentaire pour le moment.</p>
                    <% } %>

                    <!-- Formulaire ajout commentaire -->
                    <form action="/commentaire" method="POST" class="comment-form">
                        <input type="hidden" name="id_article" value="<%= article.id %>">
                        <div class="form-group">
                            <label for="auteur">Votre nom :</label>
                            <input type="text" id="auteur" name="auteur" required>
                        </div>
                        <div class="form-group">
                            <label for="contenu">Commentaire :</label>
                            <textarea id="commentaire" name="commentaire" rows="4" required></textarea>
                        </div>
                        <button type="submit">Publier le commentaire</button>
                    </form>
                </section>
            <% } else { %>
                <div class="error-message">
                    <h2>Article non trouvé</h2>
                    <p>L'article demandé n'existe pas.</p>
                    <a href="/">Retour à l'accueil</a>
                </div>
            <% } %>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 MBROUMSADJA. Tous droits réservés.</p>
        </div>
    </footer>

    <script src="/static/index.js"></script>
</body>
</html>