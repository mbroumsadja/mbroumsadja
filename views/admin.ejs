<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration - MBROUMSADJA</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    <header>
        <nav>
            <div class="nav-container">
                <h1><a href="/">MBROUMSADJA</a></h1>
                <ul>
                    <li><a href="/">Accueil</a></li>
                    <% if (user) { %>
                        <li><a href="/profil"><%= user.prenom %> <%= user.nom %></a></li>
                    <% } else { %>
                        <li><a href="/inscription">Inscription</a></li>
                        <li><a href="/connexion">Connexion</a></li>
                    <% } %>
                    <li><a href="/admin">Admin</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <h2>Panel d'Administration</h2>

            <div class="admin-dashboard">
                <div class="admin-actions">
                    <a href="/admin/article/new" class="btn btn-primary">Créer un nouvel article</a>
                    <a href="/articles" class="btn btn-secondary">Voir tous les articles</a>
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total Articles</h3>
                        <span class="stat-number" id="totalArticles"><%= typeof totalArticles !== 'undefined' ? totalArticles : 0 %></span>
                    </div>
                    <div class="stat-card">
                        <h3>Commentaires</h3>
                        <span class="stat-number" id="totalCommentaires"><%= typeof totalCommentaires !== 'undefined' ? totalCommentaires : 0 %></span>
                    </div>
                    <div class="stat-card">
                        <h3>Utilisateurs</h3>
                        <span class="stat-number" id="totalClients"><%= typeof totalClients !== 'undefined' ? totalClients : 0 %></span>
                    </div>
                </div>

                <% if (typeof recentArticles !== 'undefined' && recentArticles.length > 0) { %>
                    <div class="recent-articles">
                        <h3>Articles récents</h3>
                        <div class="articles-list">
                            <% recentArticles.forEach(article => { %>
                                <div class="article-item">
                                    <h4><a href="/article?id=<%= article.id %>"><%= article.titre %></a></h4>
                                    <p><%= new Date(article.createdAt).toLocaleDateString('fr-FR') %></p>
                                    <div class="article-actions">
                                        <a href="/admin/article/edit/<%= article.id %>">Modifier</a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 MBROUMSADJA. Tous droits réservés.</p>
        </div>
    </footer>

    <script src="/static/admin.js"></script>
</body>
</html>